<h1>Lista de articulos</h1>

<table class="table">
  <tr>
    <th> Titulo </th>
    <th> Fecha de ingreso </th>
    <th> Imagen </th>
    <th> Contenido </th>
  </th>
  
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.created_at %></td>
      <td><img src='<%= post.image_url %>'></td>
      <td><%= post.content %></td>
    </tr>
  <% end %>
  <li><%= link_to "Go to dashboard", posts_dashboard_path%></li>
</table>


     
